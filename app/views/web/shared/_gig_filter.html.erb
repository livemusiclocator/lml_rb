<div class="p-4 border-b border-gray-200">
  <div class="mb-4">
    <label class="block text-sm font-medium text-gray-700 mb-2">Filter by Date</label>
    <%= form_with url: request.path, method: :get, local: true, class: "flex items-center space-x-4" do |form| %>
      <%= form.date_field :start_date, 
          value: params[:start_date], 
          class: "px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500",
          placeholder: "Start date" %>
      <span class="text-gray-500">to</span>
      <%= form.date_field :end_date, 
          value: params[:end_date], 
          class: "px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500",
          placeholder: "End date" %>
      <%= form.submit "Filter", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
    <% end %>
  </div>
</div>